@model WebApplication2.Models.Entity.TBLDUYURULAR

@{
    ViewBag.Title = "DuyurDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("DuyuruGuncelle", "Duyuru", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(z => z.ID)
        @Html.TextBoxFor(z => z.ID, new { @class = "form-control" })
        <br />
        <label>DUYURU KATEGORİSİ</label>
        @Html.TextBoxFor(z => z.KATEGORI, new { @class = "form-control" })
        <br />
        <label>DUYURU İÇERİĞİ</label>
        @Html.TextAreaFor(z => z.ICERIK, new { @class = "form-control" })
        <br />
        <label>DUYURU TARİHİ</label>
        @Html.TextBoxFor(z => z.TARIH, new { @class = "form-control" })
    </div>
    <div>
        <br />
        <button class="btn btn-warning">Güncelle</button>
    </div>
}
